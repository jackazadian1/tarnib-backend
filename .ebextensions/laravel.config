option_settings:
  aws:elasticbeanstalk:container:php:phpini:
    composer_options: "--no-dev"
container_commands:
  01_update_permissions:
    command: "chmod -R 775 /var/app/current/storage /var/app/current/bootstrap/cache && chown -R webapp:webapp /var/app/current/storage /var/app/current/bootstrap/cache"
  01storage_link:
    command: "php artisan storage:link"
  02migrate:
    command: "php artisan migrate --force"
